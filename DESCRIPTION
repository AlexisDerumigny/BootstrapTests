Type: Package
Package: BootstrapTests
Title: Use Several Methods To Perform Bootstrap-based Hypothesis Testing
    Procedures
Version: 0.1.0
Authors@R: c(
    person("Alexis", "Derumigny", , "A.F.F.Derumigny@tudelft.nl", role = "aut",
           comment = c(ORCID = "0000-0002-6163-8097")),
